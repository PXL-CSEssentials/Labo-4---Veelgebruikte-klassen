<Window x:Class="PasswordMeter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordMeter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock Margin="20" FontSize="20">Username</TextBlock>
        <TextBox Name="userNameTextBox" Margin="20 0" FontSize="20"></TextBox>
        <TextBlock Margin="20" FontSize="20">Password</TextBlock>
        <TextBox Name="passwordTextBox" Margin="20 0 20 20" FontSize="20"></TextBox>
        <Button Name="passwordMeterButton" Margin="20" FontSize="20" Click="passwordMeterButton_Click">
            Calculate Password Strength</Button>
        <TextBlock Name="resultTextBlock" Margin="20" FontSize="16"
               TextWrapping="Wrap"></TextBlock>
    </StackPanel>
</Window>
